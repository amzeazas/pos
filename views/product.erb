<h1>Here are the details for <%= @product.name %></h1>
<h3>
<b>Name:</b> <%= @product.name %>
<br>
<b>Description:</b> <%= @product.description %>
<br>
<b>Cost:</b> $<%= @product.cost %>
<br>
<b>Availability:</b>
<% if @product.purchased() == true %>
  This has been purchased! (Order #<%= @product.purchase_id() %>)
<% else %>
  This is still available!
<% end %>
</h3>
<br>
<form action="/product/<%= @product.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="product">Update product info:</label>
  <br>
  <input type="text" name="name" id="name" placeholder="Update product name" required>
  <br>
  <input type="text" name="description" id="description" placeholder="Update product description" required>
  <br>
  <input type="number" step="0.01" min=0 name="cost" id="cost" placeholder="Update product cost" required>
  <button type="submit">Update</button>
</form>
<br>
<form action="/product/<%= @product.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn-danger" type="submit">Delete</button>
</form>
<a href="/manager">Back</a>
